class Solution:
    def longestSquareStreak(self, nums: List[int]) -> int:
        
        dicts = {}
        nums.sort()
        res = -1

        for num in nums:
            sqrt = isqrt(num)

            if sqrt * sqrt == num and sqrt in dicts:
                dicts[num] = dicts[sqrt] + 1
                res = max(res, dicts[num])
            else:
                dicts[num] = 1
        return res


