class Solution:
    # @param A : list of integers
    # @return an integer
    def solve(self, A):
        nums = A
        l, r = 0, len(nums) - 1

        while l < r:
            mid = (l+r) // 2
            if nums[mid] > nums[mid + 1]:
                r = mid
            else:
                l = mid + 1
        return nums[l]

