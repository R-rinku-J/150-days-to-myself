# cook your dish here
for _ in range(int(input())):
    n=int(input())
    s=input()
    l=list(s)
    for i in range(0,n-1,2):
        temp=l[i]
        l[i]=l[i+1]
        l[i+1]=temp
    for i in l:
        k=abs(97-ord(i))
        d=122-k
        print(chr(d),end="")
    print()


