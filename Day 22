string Solution::solve(string a) {
    string b=a;
    int n = a.size();
    for(int i=0;i<n;i++){
        b[i]='*';
    }
    b+='#';
    vector<int> start(26,-1);
    vector<int> end(26,n);
    for(int i=0;i<n;i++){
       if(start[a[i]-'a']==-1){
           start[a[i]-'a']=i;
       }
       else if(end[a[i]-'a']==n){
           end[a[i]-'a']=i;
       }
    }
    int temp  = -1;
    for(int i=0;i<n;i++){
        if(temp<i && i!=0){
            if(start[a[i]-'a']==i){
                b[i-1]='#';
                temp = end[a[i]-'a']-1;
                b[temp]=a[i];
            }
            else{
                temp =i;
                b[temp] ='#';
            }
        }
        else if (end[a[i]-'a']-1>temp){
            temp = end[a[i]-'a']-1;
            b[temp] = a[i];
        }
    }
    for(int i=n-1;i>=0;i--){
        if(b[i]=='*'){
            b[i]=b[i+1];
        }
    }
    b.pop_back();
    return b;
}
