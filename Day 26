#User function Template for python3

'''
# Node Class
class Node:
    def __init__(self, data):   # data -> value stored in node
        self.data = data
        self.next = None
'''
class Solution:
    def sumOfLastN_Nodes(self, head, n):
        #function should return sum of last n nodes
        a = head
        b = head
        
        for _ in range(n):
            a = a.next

        while a:
            a = a.next
            b = b.next
        res = 0

        while b:
            res += b.data
            b = b.next
        return res


